<Window x:Class="ABBConfigMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABBConfigMaker"
        mc:Ignorable="d"
        Title="Config Maker" Height="499.5" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,2,0">
        <Button x:Name="btn_loadFile" Content="Load xls file" HorizontalAlignment="Left" Margin="401,21,0,0" VerticalAlignment="Top" Width="91" Height="23" Click="btn_loadFile_Click"/>
        <TextBox x:Name="txt_loadedFile" HorizontalAlignment="Left" Height="23" Margin="16,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" IsEnabled="False"/>
        <Button x:Name="btn_MakeFile" Content="Create Cfg File" HorizontalAlignment="Left" Margin="659,411,0,0" VerticalAlignment="Top" Width="114" Click="btn_MakeFile_Click"/>
        <TextBox x:Name="txt_cfgFile" HorizontalAlignment="Left" Height="23" Margin="16,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" IsEnabled="False"/>
        <Button x:Name="btn_loadFile_Copy" Content="Load cfg File" HorizontalAlignment="Left" Margin="401,60,0,0" VerticalAlignment="Top" Width="91" Height="23" Click="btn_loadFile_Copy_Click"/>
        <GroupBox Header="Options" HorizontalAlignment="Left" Height="83" Margin="513,10,0,0" VerticalAlignment="Top" Width="260">
            <Grid HorizontalAlignment="Left" Height="63" Margin="0,-4,0,0" VerticalAlignment="Top" Width="258">
                <RadioButton x:Name="radWriteUpdateAll" Content="Append new and update existng signals" HorizontalAlignment="Left" Margin="7,10,0,0" VerticalAlignment="Top" Height="20" Checked="radWriteUpdateAll_Checked"/>
                <RadioButton x:Name="radDeleteAndAdd" Content="Delete old and add new signals" HorizontalAlignment="Left" Height="17" Margin="7,25,0,0" VerticalAlignment="Top" Width="194" Checked="radDeleteAndAdd_Checked"/>
                <RadioButton x:Name="radSelect" Content="Select individually" HorizontalAlignment="Left" Margin="7,42,0,0" VerticalAlignment="Top" Checked="radSelect_Checked"/>
            </Grid>
        </GroupBox>
        <ListView x:Name="lsvXls" HorizontalAlignment="Left" Height="274" Margin="16,109,0,0" VerticalAlignment="Top" Width="224">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lsvCfgLoaded" HorizontalAlignment="Left" Height="274" Margin="245,109,0,0" VerticalAlignment="Top" Width="216">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lsvCfgFinal" HorizontalAlignment="Left" Height="274" Margin="513,109,0,0" VerticalAlignment="Top" Width="260">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnAddRecord" Content="&gt;" HorizontalAlignment="Left" Margin="466,203,0,0" VerticalAlignment="Top" Width="40" Height="40" Click="btnAddRecord_Click"/>
        <Button x:Name="btnRemoveRecord" Content="&lt;" HorizontalAlignment="Left" Margin="466,248,0,0" VerticalAlignment="Top" Width="40" Height="40"/>

    </Grid>
</Window>
